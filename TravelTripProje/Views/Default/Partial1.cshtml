@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" style="width:400px; height:200px;" alt="" style="width:400px;height:200px" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">
                    @{
                        if (DateTime.TryParse(x.Tarih, out DateTime dateTimeTarih))
                        {
                            @dateTimeTarih.ToString("dd.MM.yyyy")
                        }
                        else
                        {
                            @x.Tarih
                        }
                    }
                </span>

                <p>
                    @(x.Aciklama != null && x.Aciklama.Length > 20
                            ? x.Aciklama.Substring(0, 20) + "..."
                            : x.Aciklama)
                </p>

                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku>></span></a></p>
            </div>

        </div>
    }
    @Html.Action("Partial2", "Default")


    <div class="clear"></div>
</div>