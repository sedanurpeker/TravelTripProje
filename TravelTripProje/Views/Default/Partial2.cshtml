
@using TravelTripProje.Models.Siniflar
@model List<Blog>
@foreach (var X in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@X.BlogImage" alt="" style="width:400px;height:200px" />
        </div>
        <div class="left-text">

            <h4>@X.Baslik</h4>
            <span class="doller">
                @{
                    if (DateTime.TryParse(X.Tarih, out DateTime dateTimeTarih))
                    {
                        @dateTimeTarih.ToString("dd.MM.yyyy")
                    }
                    else
                    {
                        @X.Tarih
                    }
                }
            </span>

            <p>@X.Aciklama.Substring(0, 20)...</p>
            <p><a href="/Blog/BlogDetay/@X.ID"><span class="read">Devamını Oku>></span></a></p>
        </div>
    </div>
}