@model TravelTripProje.Models.Siniflar.Iletisim
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="contact">
    <div class="wrap">
        <div class="contact-top">
            <h3>İletişim Bilgileri</h3>
            <p>Buradan bana ulaşabilirsiniz. Lütfen iletişim halinde olmaktan çekinmeyin.</p>
        </div>
        <div class="form">
            <form class="cmxform" id="contactForm" method="post" action="/Contact/SendMessage">
                <div>
                    <input type="text" name="AdSoyad" class="textbox" value="@(Model?.AdSoyad ?? "Ad Soyad")" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Ad Soyad';}" />
                </div>
                <div>
                    <input type="email" name="Mail" class="textbox" value="@(Model?.Mail ?? "Mail")" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Mail';}" />
                </div>
                <div>
                    <input type="text" name="Konu" class="textbox" value="@(Model?.Konu ?? "Konu")" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Konu';}" />
                </div>
                <div>
                    <textarea name="Mesaj" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Mesaj';}">@(Model?.Mesaj ?? "Mesaj")</textarea>
                </div>
                <div>
                    <button type="submit" class="read">Gönder</button>
                </div>
            </form>
        </div>
        <div class="contact-bottom">
            <div class="contact-left">
                <div class="contact-add">
                    <h3>Bilgilerim</h3>
                    <p>Telefon: +90 554-7832157</p>
                    <p>Mail: <a href="mailto:signup@gmail.com">sedanurpeker@gmail.com</a></p>
                </div>
            </div>
            <div class="contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3165.4567891234567!2d-121.922369!3d37.768294!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808f8e8f8e8f8e8f%3A0x8f8f8e8f8e8f8e8f!2sRashelle+Way%2C+San+Ramon%2C+CA+94582%2C+USA!5e0!3m2!1sen!2str!4v1630000000000" width="580" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                <small><a href="https://maps.google.com/maps?q=Rashelle+Way,+San+Ramon,+CA,+United+States" style="color: #555;text-align:left;"><br /><ins>Haritayı Görüntüle</ins><br /><br /></a></small>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>